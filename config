# i3 config file (v4) vim: foldmethod=marker
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Key Bindings {{{1
# Set the modifier key
# Mod4: Super
set $mod Mod4

# Bindings to start things {{{2

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# rofi run launcher
bindsym $mod+d exec rofi -show run

# rofi ssh launcher
bindsym $mod+s exec rofi -show ssh

# Bindings to switch focus {{{2

# rofi window switcher
bindsym $mod+w exec rofi -show window

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# focus the parent container
bindsym $mod+Shift+a focus parent

# focus the child container
bindsym $mod+a focus child

# Bindings for floating windows {{{2

# toggle tiling / floating
bindsym $mod+Shift+y floating toggle

# change focus between tiling / floating windows
bindsym $mod+y focus mode_toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Bindings for workspaces {{{2

# Workspace definitions
set $ws1   "1"
set $ws2   "2"
set $ws3   "3"
set $ws4   "4"
set $ws5   "5"
set $ws6   "6"
set $ws7   "7"
set $ws8   "8"
set $ws9   "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Bindings for moving windows {{{2

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move container to next output
bindsym $mod+x move workspace to output right

# Bindings for layouts {{{2

# split in horizontal orientation
bindsym $mod+Shift+b split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode
  bindsym h resize shrink width  10 px or 10 ppt
  bindsym j resize grow   height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow   width  10 px or 10 ppt

  # back to normal: Enter or Escape or $mod+Shift+r
  bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "resize"

# Bindings for miscellaneous and system things {{{2

# kill focused window
bindsym $mod+Mod1+q kill

# reload the configuration file
bindsym $mod+Mod1+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Mod1+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Mod1+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock the screen with i3lock
bindsym $mod+Mod1+l exec "i3lock --image $HOME/Pictures/lock_image --tiling --ignore-empty-password --show-failed-attempts"

# Styling settings {{{1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Hack,FontAwesome 9

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  colors {
    # colors for the i3bar components
    # <colorclass> <border> <background> <text>
    background         #666666
    statusline         #fafafa
    separator          #90a4ae
    focused_background #666666
    focused_workspace  #39adb5 #39adb5 #fafafa
    active_workspace   #73b6b0 #73b6b0 #fafafa
    inactive_workspace #90a4ae #90a4ae #fafafa
    urgent_workspace   #ffad13 #ffad13 #fafafa
    binding_mode       #82a550 #82a550 #fafafa
  }
  position top
  status_command i3blocks
  tray_output primary
}

# Colors:
# client.<class> <border> <background> <text> <indicator> <child_border>
client.focused          #666666 #39adb5 #fafafa #6182b8 #cceae7
client.focused_inactive #666666 #73b6b0 #fafafa #8796b0 #eaeff0
client.unfocused        #666666 #eaeff0 #666666 #8796b0 #eaeff0
client.urgent           #666666 #ffad13 #fafafa #8796b0 #eaeff0
client.placeholder      #666666 #cceae7 #666666 #8796b0 #eaeff0
client.background       #fafafa

# Misc settings {{{1

# hide the borders on workspaces with only one window
hide_edge_borders smart

# disable mouse warping
mouse_warping none

# Startup applications {{{1
exec --no-startup-id nm-applet
exec --no-startup-id variety
